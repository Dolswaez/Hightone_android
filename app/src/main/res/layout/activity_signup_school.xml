<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/SignUp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/signup_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="144dp"/>

    <EditText
        android:id="@+id/Edit_SignUp_School"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="학교을 입력해 주세요."
        android:paddingStart="10dp"
        android:ems="10"
        android:fontFamily="@font/bmyeonsung"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/edit_sign"
        app:layout_constraintTop_toBottomOf="@id/SignUp_title"
        android:layout_marginTop="47dp"/>

    <TextView
        android:id="@+id/tv_SignUp_School"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학교"
        android:textSize="25dp"
        android:textColor="#000000"
        android:fontFamily="@font/bmyeonsung"
        app:layout_constraintBottom_toTopOf="@id/Edit_SignUp_School"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"/>

    <TextView
        android:id="@+id/SignUp_School"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*필수*"
        android:fontFamily="@font/bmyeonsung"
        android:textColor="#FF5454"
        android:layout_marginEnd="27dp"
        app:layout_constraintEnd_toStartOf="@id/SignUp_title"
        app:layout_constraintBottom_toTopOf="@id/Edit_SignUp_School"
        android:layout_marginBottom="5dp"/>


    <EditText
        android:id="@+id/edt_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/email_check"
        android:fontFamily="@font/bmyeonsung"
        android:layout_marginTop="47dp"
        android:minHeight="30dp"
        android:ems="2"
        android:minWidth="60dp"
        app:layout_constraintTop_toBottomOf="@id/Edit_SignUp_School"
        app:layout_constraintStart_toStartOf="@id/Edit_SignUp_School"/>

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학년"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:fontFamily="@font/bmyeonsung"
        app:layout_constraintStart_toEndOf="@id/edt_level"
        app:layout_constraintBottom_toBottomOf="@id/edt_level"
        android:layout_marginStart="5dp"/>

    <EditText
        android:id="@+id/edt_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/email_check"
        android:fontFamily="@font/bmyeonsung"
        android:layout_marginTop="47dp"
        android:minHeight="30dp"
        android:ems="2"
        android:minWidth="60dp"
        app:layout_constraintTop_toBottomOf="@id/Edit_SignUp_School"
        app:layout_constraintStart_toEndOf="@id/tv_SignUp_School"
        android:layout_marginStart="75dp"/>

    <TextView
        android:id="@+id/tv_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:fontFamily="@font/bmyeonsung"
        app:layout_constraintStart_toEndOf="@id/edt_class"
        app:layout_constraintBottom_toBottomOf="@id/edt_level"
        android:layout_marginStart="5dp"/>

    <EditText
        android:id="@+id/edt_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/email_check"
        android:fontFamily="@font/bmyeonsung"
        android:layout_marginTop="47dp"
        android:minHeight="30dp"
        android:ems="2"
        android:minWidth="60dp"
        app:layout_constraintTop_toBottomOf="@id/Edit_SignUp_School"
        app:layout_constraintStart_toEndOf="@id/edt_class"
        android:layout_marginStart="55dp"/>

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="번호"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:fontFamily="@font/bmyeonsung"
        app:layout_constraintStart_toEndOf="@id/edt_number"
        app:layout_constraintBottom_toBottomOf="@id/edt_level"
        android:layout_marginStart="5dp"/>


    <Button
        android:id="@+id/btn_SignUp_Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:background="@drawable/btn_next_off"
        android:fontFamily="@font/bmyeonsung"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        android:text="다음"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/SignUp_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>